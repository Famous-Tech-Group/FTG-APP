<Window x:Class="FamousTechCollabApp.Windows.ProjectManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Management" Height="400" Width="600">
    <Grid>
        <ListBox Name="ProjectsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="400" Height="300"/>
        <TextBox Name="ProjectNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="200" Height="30"/>
        <Button Content="Add Project" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="100" Click="AddProjectButton_Click"/>
    </Grid>
</Window>
